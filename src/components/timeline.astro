<section
	id="timeline"
	class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
	<div class="max-w-5xl mx-auto px-4">
		<h3 class="text-4xl md:text-5xl font-medium mb-8">Career Timeline</h3>
		<ul
			class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical bg-neutral-900 border-0 rounded-lg">
			<li>
				<div class="timeline-middle">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 20 20"
						fill="currentColor"
						class="h-5 w-5">
						<path
							fill-rule="evenodd"
							d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
							clip-rule="evenodd"></path>
					</svg>
				</div>
				<div class="timeline-start mb-10 md:text-end">
					<time class="font-mono italic">Sept of 2020</time>
					<div class="text-lg font-black">
						1st year of Software Engineering at Rey Juan Carlos
						University
					</div>
				</div>
				<hr />
			</li>
			<li>
				<hr />
				<div class="timeline-middle">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 20 20"
