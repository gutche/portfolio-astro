---
import CodeBlock from "../React/CodeBlock.tsx";
import { Image } from "astro:assets";
import headshot from "../assets/headshot-drawing-narrow.png";

interface Hero {
	title: string;
	image: ImageMetadata;
}

const hero: Hero = {
	title: "Gledrian's headshot",
	image: headshot as ImageMetadata,
};
---

<section
	class="flex items-center h-screen text-[var(--white)] mt-12 md:mt-0"
	id="home">
	<div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14">
		<div class="text-left space-y-4">
			<div
				class="flex flex-col justify-center items-center lg:flex-row space-y-4 lg:space-y-0 lg:space-x-8 md:gap-4">
				<CodeBlock />
				<Image
					src={hero.image}
					alt={hero.title}
					class="border-0 rounded-3xl bg-cover"
				/>
			</div>
		</div>
	</div>
</section>

<style is:global>
	.shiny-sec {
		background: linear-gradient(
			135deg,
			#008080 25%,
			#a0e7e5 50%,
			#008080 75%
		);
		background-size: 400% 100%;
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
		animation: shine 3s linear infinite;
	}

	@keyframes shine {
		0% {
			background-position: 100% 50%;
		}
		30%,
		70% {
			background-position: 0% 50%;
		}
	}
</style>
