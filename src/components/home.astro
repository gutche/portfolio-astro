---
import LetterGlitch from "../React/LetterGlitch.tsx";
import LogoWall from "../components/logoWall.astro";
import SkillsList from "../React/SkillsList.tsx";
import CodeBlock from "../React/CodeBlock.tsx";
import { Image } from "astro:assets";
import headshot from "../../public/headshot.png";

interface Hero {
	title: string;
	image: ImageMetadata;
}

const hero: Hero = {
	title: "Gledrian's headshot",
	image: headshot as ImageMetadata,
};
---

<section class="text-[var(--white)] mt-12 md:mt-0" id="home">
	<div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14">
		<div class="text-left space-y-4">
			<div
				class="flex flex-col justify-center items-center lg:flex-row space-y-4 lg:space-y-0 lg:space-x-8 md:gap-4">
				<CodeBlock />
				<Image src={hero.image} alt={hero.title} />
			</div>
		</div>

		<LogoWall />

		<div class="flex flex-col lg:flex-row items-center gap-8">
			<SkillsList client:load />
			<div
				class="flex justify-center md:w-full md:h-[292px] size-[290px] pt-3 md:pt-9 md:ml-16">
				<LetterGlitch
					client:load
					glitchColors={["#008080", "#006666", "#004c4c"]}
					glitchSpeed={33}
					centerVignette={false}
					outerVignette={true}
					smooth={true}
				/>
			</div>
		</div>
	</div>
</section>

<style is:global>
	.shiny-sec {
		background: linear-gradient(
			135deg,
			#008080 25%,
			#a0e7e5 50%,
			#008080 75%
		);
		background-size: 400% 100%;
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
		animation: shine 3s linear infinite;
	}

	@keyframes shine {
		0% {
			background-position: 100% 50%;
		}
		30%,
		70% {
			background-position: 0% 50%;
		}
	}
</style>
